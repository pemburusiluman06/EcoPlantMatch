<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.InferenceViewController">
    <Label layoutX="183.0" layoutY="14.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Plant Recommendation System" />
    <GridPane hgap="10" layoutX="228.0" layoutY="67.0" vgap="10">
        <Label text="Soil Type:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <ComboBox fx:id="soilTypeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        
        <Label text="Temperature:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <ComboBox fx:id="temperatureComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        
        <Label text="Light Condition:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <ComboBox fx:id="lightConditionComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        
        <Label text="Rainfall:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <ComboBox fx:id="rainfallComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        
        <Label text="Altitude:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <ComboBox fx:id="altitudeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>
    <Button fx:id="recommendButton" layoutX="234.0" layoutY="276.0" onAction="#handleGetRecommendation" text="Get Recommendation" />
    <Label fx:id="resultLabel" layoutX="208.0" layoutY="326.0" text="Recommendation will appear here." wrapText="true" />
</AnchorPane>
